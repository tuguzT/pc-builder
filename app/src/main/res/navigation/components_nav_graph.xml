<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/components_nav_graph"
    app:startDestination="@id/component_list_fragment">

    <fragment
        android:id="@+id/component_list_fragment"
        android:name="io.github.tuguzt.pcbuilder.presentation.view.components.ComponentListFragment"
        android:label="fragment_component_list"
        tools:layout="@layout/fragment_component_list">
        <action
            android:id="@+id/action_component_add_fragment"
            app:destination="@id/component_add_fragment" />
        <action
            android:id="@+id/action_component_item_fragment"
            app:destination="@id/component_fragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_component_search_net_fragment"
            app:destination="@id/component_search_net_fragment" />
    </fragment>

    <fragment
        android:id="@+id/component_add_fragment"
        android:name="io.github.tuguzt.pcbuilder.presentation.view.components.ComponentAddFragment"
        android:label="fragment_component_add"
        tools:layout="@layout/fragment_component_add" />

    <fragment
        android:id="@+id/component_fragment"
        android:name="io.github.tuguzt.pcbuilder.presentation.view.components.ComponentFragment"
        android:label="fragment_component"
        tools:layout="@layout/fragment_component">
        <argument
            android:name="id"
            app:argType="string" />
        <deepLink
            android:id="@+id/component_deep_link"
            app:uri="https://tuguzt.github.io/pcbuilder/components/{id}" />
    </fragment>

    <fragment
        android:id="@+id/component_search_net_fragment"
        android:name="io.github.tuguzt.pcbuilder.presentation.view.components.ComponentSearchNetFragment"
        android:label="fragment_component_search_net"
        tools:layout="@layout/fragment_component_search_net" />

</navigation>
